---
import { myResume } from "../data/resume";
---

<section
  id="education"
  class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300"
>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center fade-in">Education</h2>

    <div class="max-w-3xl mx-auto grid gap-8">
      {
        myResume.education.map((education) => (
          <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-md transition-all duration-300 hover:shadow-lg fade-in">
            <div class="flex flex-wrap justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold">{education.title}</h3>
                <p class="text-indigo-600 dark:text-indigo-400">
                  üìç{education.educationCentre}
                </p>
              </div>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                {education.from} - {education.to}
              </p>
            </div>

            <p class="text-gray-700 dark:text-gray-300 mb-3">
              {education.description}
            </p>

            <div class="mt-4">
              <h4 class="font-semibold mb-2">Key Achievements</h4>
              <ul class="ml-5 list-disc list-outside text-gray-700 dark:text-gray-300 space-y-1">
                {education.keyAchivements.map((achivement) => (
                  <li>{achivement}</li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
