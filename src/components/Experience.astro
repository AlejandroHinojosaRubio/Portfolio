---
import { myResume } from "../data/resume";
---

<section
  id="experience"
  class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300"
>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center fade-in">
      Work Experience
    </h2>

    {
      myResume.experience.map(({title, company, from, to, list, location, techStack, other}) => 
        (
      <div class="max-w-3xl mx-auto">
      <div class="relative pl-8 pb-12 fade-in">
        <!-- Timeline line -->
        <div
          class="absolute top-0 left-0 h-full w-px bg-indigo-200 dark:bg-indigo-900"
        >
        </div>

        <!-- Timeline dot -->
        <div
          class="absolute top-0 left-0 w-6 h-6 rounded-full bg-indigo-600 dark:bg-indigo-500 transform -translate-x-1/2 flex items-center justify-center"
        >
          <div class="w-2 h-2 rounded-full bg-white"></div>
        </div>

        <div
          class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-md transition-all duration-300 hover:shadow-lg"
        >
          <div class="flex flex-wrap justify-between items-start mb-4">
            <div>
              <h3 class="text-xl font-bold">{title}</h3>
              <p class="text-indigo-600 dark:text-indigo-400">{company}</p>
              <span class="text-sm">üìç{location}</span>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              {from} - {to}
            </p>
          </div>

          <ul
            class="ml-10 list-disc list-outside text-gray-700 dark:text-gray-300 space-y-2"
          >
            {list.map((item) => <li>{item}</li>)}
          </ul>

          {
            techStack && other && (          <h4 class="font-semibold mb-3 mt-9">Tech Stack</h4>
              <div class="flex flex-wrap gap-2">
                {
                  techStack.map((skill) => (
                    <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-300 rounded-full text-sm">
                      {skill}
                    </span>
                  ))
                }
              </div>
              <h4 class="font-semibold mb-3 mt-5">Other</h4>
              <div class="flex flex-wrap gap-2">
                {
                  other.map((skill) => (
                    <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-300 rounded-full text-sm">
                      {skill}
                    </span>
                  ))
                }
              </div>)
          }

        </div>
      </div>
      </div>
      ))
    }

  </div>
</section>
