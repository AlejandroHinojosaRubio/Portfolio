---
import { myResume } from "../data/resume";
---

<section
  id="certifications"
  class="py-12 sm:py-16 md:py-20 bg-white dark:bg-gray-900 transition-colors duration-300"
>
  <div class="container mx-auto px-4">
    <h2 class="text-2xl sm:text-3xl font-bold mb-8 sm:mb-12 text-center fade-in">Certifications</h2>

    <div class="max-w-3xl mx-auto grid gap-6 sm:gap-8">
      <div
        class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 sm:p-6 shadow-md transition-all duration-300 hover:shadow-lg fade-in"
      >
        <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4">Professional Certifications</h3>
        <ul class="space-y-3 sm:space-y-4">
          {
            myResume.certifications.map((cert) => (
              <li class="flex items-start">
                <div class="flex-shrink-0 h-4 w-4 sm:h-5 sm:w-5 mt-1 text-indigo-600 dark:text-indigo-400">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div class="ml-2 sm:ml-3">
                  <p class="font-medium text-base">{cert.title}</p>
                  <p class="text-xs sm:text-base text-gray-600 dark:text-gray-400">
                    {cert.issuer}, {cert.date}
                  </p>
                  <p class="text-xs sm:text-base text-gray-600 dark:text-gray-400">
                    ID: {cert.id}
                  </p>
                  {cert?.url && (
                    <p class="text-xs sm:text-base text-gray-600 dark:text-gray-400 break-all">
                      <a href={cert.url} target="_blank">
                        URL: {cert.url}
                      </a>
                    </p>
                  )}
                  <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-3 sm:mb-4 mt-2 sm:mt-3">
                    {cert.skills.map((skill) => (
                      <span class="px-1.5 sm:px-2 py-0.5 sm:py-1 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-300 rounded text-xs sm:text-base">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
